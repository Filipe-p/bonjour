           <%= f.input :quantity, as: :integer, label: false %>
         </div>
         <hr>
         <div class="row">
           <div class="col-md-12">
             <p><span id= "other_price_<%= other.id %>" class = "price"><%= other.price %></span> â‚¬/un</p>
           </div>
         </div>
       </div>
     </div>
