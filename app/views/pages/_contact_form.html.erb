<%= simple_form_for @contact do |f| %>
  <%= f.input :contact_first_name, input_html: { placeholder: "Primeiro Nome" }, label: false %>
  <%= f.input :contact_last_name, input_html: { placeholder: "Último Nome" }, label: false %>
  <%= f.input :contact_email, input_html: { placeholder: "Email" }, label: false %>
  <%= f.input :contact_telephone, as: :integer, input_html: { placeholder: "Telemóvel"}, label: false %>
  <%= f.input :message, as: :text ,input_html: { placeholder: "Pesquisa Alguma Coisa Especifica? Por favor especifique." }, label: false %>
  <%= f.submit "Enviar", class: "btn cta-btn cta-btn-red cta-btn-size btn-width-100 btn-slim" %>
<% end %>
