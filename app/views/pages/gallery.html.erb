<div class="banner-gallery">
<div class="container">
<h3>Veja os nossos bolos</h3>
  <div class="row" id='gallery'>
    <% @featured_cakes.each do |featured_cake| %>
      <div class="col-md-4 gallery">
        <a href="<%= cl_image_path featured_cake.photo %>" class="swipebox" title="<%= featured_cake.name %>">
         <%= cl_image_tag featured_cake.photo, class: "gallery-img" %>
       </a>
      </div>
   <% end %>
  </div>
</div>
</div>

<% content_for(:after_js) do %>
<script>
  $(document).ready(function(){
   $("a").click(function(event){
    event.preventDefault();
});
  })
</script>
<% end %>
